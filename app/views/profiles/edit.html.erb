<div class="container mx-auto p-6">
  <h1 class="text-4xl font-bold text-center text-blue-400 mb-8">Editar Perfil</h1>
  <div class="bg-gray-800 p-6 rounded-lg shadow-lg">
    <%= form_with model: @profile, url: profile_path(@profile), local: true, class: "space-y-4" do |form| %>
      <div>
        <%= form.label :name, "Nombre:", class: "block text-sm font-medium text-blue-300" %>
        <%= form.text_field :name, required: true, class: "w-full mt-1 p-2 rounded-md bg-gray-700 text-white focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
      </div>
      <div>
        <%= form.label :last_name, "Apellido:", class: "block text-sm font-medium text-blue-300" %>
        <%= form.text_field :last_name, required: true, class: "w-full mt-1 p-2 rounded-md bg-gray-700 text-white focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
      </div>
      <div>
        <%= form.label :phone_number, "TelÃ©fono:", class: "block text-sm font-medium text-blue-300" %>
        <%= form.text_field :phone_number, required: true, class: "w-full mt-1 p-2 rounded-md bg-gray-700 text-white focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
      </div>
      <div class="flex justify-center">
        <%= form.submit "Actualizar Perfil", class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-lg transition transform hover:scale-105" %>
      </div>
    <% end %>
  </div>
</div>
