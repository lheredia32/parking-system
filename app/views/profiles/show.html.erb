<div class="container mx-auto p-6">
  <h1 class="text-4xl font-bold text-center text-blue-400 mb-8">Perfil</h1>
  <div class="bg-gray-800 p-6 rounded-lg shadow-lg">
    <p><strong>Nombre:</strong> <%= @profile.name %></p>
    <p><strong>Apellido:</strong> <%= @profile.last_name %></p>
    <p><strong>Correo Electrónico:</strong> <%= Current.user.email_address %></p>
    <p><strong>Teléfono:</strong> <%= @profile.phone_number %></p>
    <p><strong>Días Logueados:</strong> <%= (Current.user.created_at.to_date..Date.today).count %></p>
    <%= link_to 'Editar Perfil', edit_profile_path(@profile), class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-lg transition transform hover:scale-105" %>
  </div>
</div>
