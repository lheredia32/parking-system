<div class="container mx-auto p-6">
  <h1 class="text-4xl font-bold text-center text-blue-400 mb-8">
    <i class="fa fa-user"></i> PERFIL
  </h1>
  <div class="bg-gray-800 p-6 rounded-lg shadow-lg">
    

    <table class="min-w-full bg-gray-700 text-gray-300 rounded-lg shadow-md overflow-hidden mb-6">
      <tbody class="divide-y divide-gray-600">
        <tr>
          <td class="px-4 py-2 font-semibold">Nombre:</td>
          <td class="px-4 py-2"><%= @profile.name %></td>
        </tr>
        <tr>
          <td class="px-4 py-2 font-semibold">Apellido:</td>
          <td class="px-4 py-2"><%= @profile.last_name %></td>
        </tr>
        <tr>
          <td class="px-4 py-2 font-semibold">Correo Electrónico:</td>
          <td class="px-4 py-2"><%= Current.user.email_address %></td>
        </tr>
        <tr>
          <td class="px-4 py-2 font-semibold">Teléfono:</td>
          <td class="px-4 py-2"><%= @profile.phone_number %></td>
        </tr>
        <tr>
          <td class="px-4 py-2 font-semibold">Días Logueados:</td>
          <td class="px-4 py-2"><%= (Current.user.created_at.to_date..Date.today).count %></td>
        </tr>
      </tbody>
    </table>
    
    <div class="flex justify-center space-x-4">
      <%= link_to 'Editar Perfil', edit_profile_path(@profile), class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-lg transition transform hover:scale-105" %>
      <%= link_to vehicles_path, class: "bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded-lg transition transform hover:scale-105" do %>
        <i class="fa-solid fa-backward-step"></i> Volver
      <% end %>
    </div>
    
  </div>
</div>
