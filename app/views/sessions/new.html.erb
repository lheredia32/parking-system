<div class="w-1/3 bg-gray-800 p-6 rounded-lg shadow-lg">
  <div class="max-w-md w-full bg-gray-800 p-8 rounded-xl shadow-2xl border border-gray-700 text-center space-y-6">
    
    <% if alert = flash[:alert] %>
      <p class="py-2 px-4 bg-red-500 text-white font-medium rounded-md text-center animate-pulse" id="alert"><%= alert %></p>
    <% end %>

    <% if notice = flash[:notice] %>
      <p class="py-2 px-4 bg-green-500 text-white font-medium rounded-md text-center animate-pulse" id="notice"><%= notice %></p>
    <% end %>

    <!-- Título con ícono -->
    <h1 class="text-4xl font-bold text-center text-blue-400 mb-8">
      <i class="fa fa-car"></i> Iniciar Sesión
    </h1>

    <%= form_with url: session_url, class: "space-y-4" do |form| %>
      <div class="space-y-4">
        <%= form.email_field :email_address, 
          required: true, 
          autofocus: true, 
          autocomplete: "username", 
          placeholder: "Correo Electrónico", 
          value: params[:email_address], 
          class: "w-full px-4 py-3 rounded-lg bg-gray-700 text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500 transition" %>

        <%= form.password_field :password, 
          required: true, 
          autocomplete: "current-password", 
          placeholder: "Contraseña", 
          maxlength: 72, 
          class: "w-full px-4 py-3 rounded-lg bg-gray-700 text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500 transition" %>
      </div>

      <div class="flex justify-center">
        <%= form.submit "Iniciar Sesión",
          class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-lg transition transform hover:scale-105" %>
      </div>

      <div class="text-center mt-4">
        <%= link_to "¿Olvidaste tu contraseña?", new_password_path, 
          class: "text-sm text-gray-400 hover:text-blue-300 transition underline" %>
      </div>
    <% end %>
  </div>
</div>
